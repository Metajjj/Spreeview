@using CommonLibrary.DataClasses.EpisodeModel

<article class="w-[80vw] sm:w-[60vw] m-auto mt-6">
	<h3 class="text-xl font-semibold mb-2">@episode.EpisodeNumber: @episode.Title</h3>
	<p class="text-sm mb-2">Runtime: @episode.Runtime mins</p>
	<p class="mb-4">@episode.Overview</p>
	<div class="h-[5px] w-full bg-black shadow-purple" />
	<p>@episode.Id</p>
</article>


@code {
	[Parameter]
	public EpisodeGetDTO episode { get; set; }
}
