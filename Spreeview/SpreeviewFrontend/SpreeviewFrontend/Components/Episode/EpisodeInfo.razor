@using CommonLibrary.DataClasses.EpisodeModel

<article class="w-[80vw] sm:w-[60vw] m-auto mt-6">
	<h3 class="text-2xl font-semibold mb-2">@episode.EpisodeNumber: @episode.Title</h3>
	<p class="text-md mb-2">Runtime: @episode.Runtime mins</p>
	<p class="mb-4 text-lg">@episode.Overview</p>
	<div class="h-[5px] w-full bg-black shadow-purple" />
</article>


@code {
	[Parameter]
	public EpisodeGetDTO episode { get; set; }
}
