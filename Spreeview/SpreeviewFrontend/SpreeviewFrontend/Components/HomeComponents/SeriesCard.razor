@using CommonLibrary.DataClasses.SeriesModel
@if (series != null)
{
	<NavLink class="shadow-purple" href=@($"/series/{series.Id}")>
		<img class="h-full m-auto object-cover overflow-hidden display-block"
			 src=@(string.IsNullOrEmpty(series.PosterPath) ? $"https://image.tmdb.org/t/p/w500{series.BannerPath}" : $"https://image.tmdb.org/t/p/w500{series.PosterPath}") 
			 alt="@series.Name" 
			 loading="lazy" 
		/>
	</NavLink>
}

@code {
	[Parameter]
	public SeriesGetDTO series { get; set; }
}
