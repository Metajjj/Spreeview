@using CommonLibrary.DataClasses.SeriesModel
<div class="flex gap-10 px-20 py-4">
	<!--Bio section-->
	<section class="flex-[2.5]">
		<!--Banner section-->
		<section>
			<img src=@($"https://image.tmdb.org/t/p/original{series.BannerPath}") width="100%" />
		</section>
		<section class="px-4">
			<!--Episodes section-->
			<div class="flex gap-4 items-center py-8">
				<span>Episodes:</span>
				<div class="flex gap-2 flex-wrap">
					@for (var i = 1; i <= series.Seasons.Count; i++)
					{
						<div class="bg-black text-white px-3 py-1 rounded-lg">@i</div>
					}
				</div>
			</div>
			<!--Information section-->
			<article>
				<div class="flex gap-2 items-end">
					<h2 class="text-3xl">@series.Name</h2>
					<h3>@series.ReleaseDate  Directed by <span class="text-purple-700">Director Name</span></h3>
				</div>
				<p class="mt-4">
					@series.Overview
				</p>
			</article>
		</section>
	</section>
	<!--Seasons section-->
	<section class="flex-[1] flex flex-col gap-4 items-center max-h-full">
		@for (var i = 1; i <= series.Seasons.Count; i++)
		{
			<div class="w-4/5 h-36 flex justify-center items-center light-bg-secondary text-white">
				Season @i
			</div>
		}
	</section>
</div>

@code {
	[Parameter]
	public SeriesGetDTO series { get; set; }

}
