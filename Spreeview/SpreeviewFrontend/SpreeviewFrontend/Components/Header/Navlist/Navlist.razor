    <div class="flex gap-4 rounded-2xl items-center hover:bg-black/10 active:bg-black/10 transition-colors">
        <NavLink class="p-2" href="/">Home</NavLink>
    </div>

    @if (MobileMode)
    {
        <UserStatus/>
    }
    
    <NavlistLink href="health">App Health</NavlistLink>
    <NavlistLink href="chat">Chat</NavlistLink>

    @if (!MobileMode)
    {
        <UserStatus/>
    }
    
</nav>


           
           
